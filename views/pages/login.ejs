<body data-gr-c-s-loaded="true" class="bg-light pt-5">
    <div class="container pt-5">
        <div class="col-md-6 offset-xl-3 mt-5">
            <div class="card">
                <div class="card-header bg-secondary">
                    <div class="text-center text-white text-wight-bold">
                        <h4>
                            <strong>
                                Welcome to our
                                <a href="" class="text-info">
                                    Meta Media
                                </a>
                            </strong>
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group text-center mt-5">
                        <h3 class="font-weight-bold text-dark">SIGN IN</h3>
                    </div>
                    <form method="post" class="form-validation">
                        <div class="form-group pb-0">
                            <div class="pl-lg-5 pr-lg-5">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="material-icons text-primary">
                                                email &nbsp;
                                            </i>
                                        </span>
                                    </div>
                                    <input id="email" name="email" type="email" class="form-control" placeholder=" &nbsp;User email or User name" autocomplete="on" autofocus required/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="pl-lg-5 pr-lg-5">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="material-icons text-primary">
                                                lock &nbsp;
                                            </i>
                                        </span>
                                    </div>
                                    <input id="password" name="password" type="password" class="form-control" placeholder=" &nbsp;Password" autocomplete="on" required/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group d-lg-flex align-items-right pr-lg-5 mt-lg-3">
                            <button type="submit" class="ml-auto p-2 pl-3 pr-3 btn btn-raised btn-success">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-secondary">
                    <h6 class="text-weight-bold text-white">
                        If you have not account, click 
                        <a href="/signup" class="text-success">
                            <strong>
                                here
                            </strong>
                        </a>
                        to create your account.
                    </h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin import jabascript libs -->
    <% include ../partials/scripts %>
    <!-- End import jabascript libs -->

    <script src="javascripts/login.js"></script>
</body>
<body data-gr-c-s-loaded="true" class="bg-light pt-5">
    <div class="container pt-5">
        <div class="col-md-6 offset-xl-3 mt-5">
            <div class="card">
                <div class="card-header bg-secondary">
                    <div class="text-center text-white text-wight-bold">
                        <h4>
                            <strong>
                                Welcome to our
                                <a href="" class="text-info">
                                    Meta Media
                                </a>
                            </strong>
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group text-center mt-5">
                        <h3 class="font-weight-bold text-dark">REGISTER</h3>
                    </div>
                    <form method="post" class="form-validation">
                        <div class="row pl-lg-5 pr-lg-5 mb-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="material-icons text-primary">
                                                person &nbsp;
                                            </i>
                                        </span>
                                    </div>
                                    <input id="firstName" name="firstName" type="text" class="form-control" placeholder=" &nbsp;First name" autocomplete="on" autofocus autocomplete="on" required/>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="material-icons text-primary">
                                                person &nbsp;
                                            </i>
                                        </span>
                                    </div>
                                    <input id="lastName" name="lastName" type="text" class="form-control" placeholder=" &nbsp;Last name" autocomplete="on" required/>
                                </div>
                            </div>
                        </div>
                        <div class="pl-lg-5 pr-lg-5 mb-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="material-icons text-primary">
                                            email &nbsp;
                                        </i>
                                    </span>
                                </div>
                                <input id="email" name="email" type="email" class="form-control" placeholder=" &nbsp;User email" autocomplete="on" required/>
                            </div>
                        </div>
 
                        <div class="pl-lg-5 pr-lg-5 mb-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="material-icons text-primary">
                                            lock &nbsp;
                                        </i>
                                    </span>
                                </div>
                                <input id="password" name="password" type="password" class="form-control" placeholder=" &nbsp;Password" autocomplete="on" required/>
                            </div>
                        </div>

                        <div class="pl-lg-5 pr-lg-5">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="material-icons text-primary">
                                            lock_open &nbsp;
                                        </i>
                                    </span>
                                </div>
                                <input id="rpassword" name="rpassword" type="password" class="form-control" placeholder=" &nbsp;Confirm password" autocomplete="on" required/>
                            </div>
                        </div>

                        <div class="pl-lg-5 pr-lg-5">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">
                                        <i class="material-icons text-primary">
                                            code &nbsp;
                                        </i>
                                    </span>
                                </div>
                                <input id="code" name="code" type="number" class="form-control" placeholder=" &nbsp;Enter your code for register." autocomplete="on" required/>
                            </div>
                        </div>

                        <div class="form-group d-lg-flex align-items-right pr-lg-5 mt-lg-3">
                            <div class="form-group pl-5">
                                <h5 class="error-text valid-feedback">
                                    <strong class="error-text-content"></strong>
                                </h5>
                            </div>
                            <button type="submit" class="ml-auto p-2 pl-3 pr-3 btn btn-raised btn-success">
                                Signu up
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-secondary">
                    <h6 class="text-weight-bold text-white">
                        If you already have a account, click 
                        <a href="/" class="text-success">
                            <strong>
                                here
                            </strong>
                        </a>
                        to log in your account.
                    </h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin import jabascript libs -->
    <% include ../partials/scripts %>
    <!-- End import jabascript libs -->

    <script src="javascripts/signup.js"></script>
</body>